{{!
    @template report_lmsace_reports/widgets/usermyassignments.

    Template for the User Assignment widgets.

    Example context (json):
    {
        "assignments" : "10",
        "completions": "10",
        "submissions" : "10"
    }
}}

<div class="assignments-block">
    <span><i class="fa fa-file-text-o"></i> <b>{{#str}} strassignments, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{assignments}}</b></span>
</div>

<div class="completions-block">
    <span><i class="fa fa-check-circle-o"></i> <b>{{#str}} completions, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{completions}}</b></span>
</div>

<div class="submissions-block">
    <span><i class="fa fa-check-square-o"></i> <b>{{#str}} strsubmitted, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{submissions}}</b></span>
</div>
