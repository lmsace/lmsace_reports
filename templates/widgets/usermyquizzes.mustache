{{!
    @template report_lmsace_reports/widgets/usermyquizzes.

    Template for the User Quiz widgets.

    Example context (json):
    {
        "quizzes" : "10",
        "completions": "10",
        "attempts" : "10"
    }
}}

<div class="quizzes-block">
    <span><i class="fa fa-question-circle-o"></i> <b>{{#str}} strquizzes, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{quizzes}}</b></span>
</div>

<div class="completions-block">
    <span><i class="fa fa-check-circle-o"></i> <b>{{#str}} completions, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{completions}}</b></span>
</div>

<div class="attempts-block">
    <span><i class="fa fa-bullseye"></i> <b>{{#str}} strattempts, report_lmsace_reports{{/str}}:</b></span>
    <span><b>{{attempts}}</b></span>
</div>
